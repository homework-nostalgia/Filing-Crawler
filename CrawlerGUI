from Tkinter import *
import time

root = Tk()
root.geometry("566x350")
root.resizable(width=FALSE, height=FALSE)

#menu bar
menubar = Menu(root)
menubar.add_command(label="File", command=root.quit)#change command
menubar.add_command(label="Quit", command=root.quit)#change command
root.config(menu=menubar)

titleframe = Frame(root)
titleframe.pack()
title = Label(titleframe, text="\nDirectory to place CSV file: ")
title.pack()

#directory entry
directoryframe = Frame(root)
directoryframe.pack()
directoryfield = Entry(directoryframe, width=50)
directoryfield.grid(row=0,column=0,padx=5)
dirchange = Button(directoryframe, text="Choose new locaton...")
dirchange.grid(row=0,column=1)

#empty cell for spacing
spacemaker = Frame(root)
spacemaker.pack()
space = Label(spacemaker)
space.grid(row=0,column=0,pady=18)

#config and start buttons
buttonframe = Frame(root)
buttonframe.pack()
customize = Button(buttonframe, text="customize crawler", height = 2, width = 20)
customize.grid(row=0,column=0,pady=1)
startcrawl = Button(buttonframe, text="Inititate crawler", height = 2, width = 20, bg = root.cget('bg'))
startcrawl.grid(row=1,column=0,pady=1)

#empty cell for spacing
spacemaker2 = Frame(root)
spacemaker2.pack()
space2 = Label(spacemaker2)
space2.grid(row=0,column=0,pady=15)

#progress bar
progressframe = Frame(root,bd=1,relief='sunken')
progressframe.pack()

for item in range(1,41):
    exec("bar"+str(item)+" = Button(progressframe, height = 1, width = 0,relief='flat')")
    exec("bar"+str(item)+".grid(row=0,column="+str(item-1)+")")

root.update()

for item in range(1,41):
    time.sleep(1)
    eval("bar"+str(item)).configure(bg = "#33CCFF")
    root.update()


root.mainloop()  
